    <value>
      <Mech_Lancer>0</Mech_Lancer>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/FactionDef[defName="Mechanoid"]/pawnGroupMakers/li/options/Mech_Pikeman</xpath>
    <value>
      <Mech_Pikeman>0</Mech_Pikeman>
    </value>
  </Operation>
  <!-- ========== Spacers ========== -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/FactionDef[@Name="AncientsBase"]/techLevel</xpath>
    <value>
      <techLevel>Medieval</techLevel>
    </value>
  </Operation>
  <!-- ========== Insects ========== -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/FactionDef[defName="Insect"]/requiredCountAtGameStart</xpath>
    <value>
      <requiredCountAtGameStart>0</requiredCountAtGameStart>
    </value>
  </Operation>
