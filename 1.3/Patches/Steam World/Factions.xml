<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- ========== Mechanoids ========== -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/FactionDef[defName="Mechanoid" or defName="Empire"]/requiredCountAtGameStart</xpath>
    <value>
      <requiredCountAtGameStart>0</requiredCountAtGameStart>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/FactionDef[defName="Mechanoid"]/earliestRaidDays</xpath>
    <value>
      <earliestRaidDays>90000</earliestRaidDays>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/FactionDef[defName="Mechanoid"]/permanentEnemy</xpath>
    <value>
      <permanentEnemy>false</permanentEnemy>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/FactionDef[defName="Mechanoid"]/pawnGroupMakers/li/options/Mech_Centipede</xpath>
    <value>
      <Mech_Centipede>0</Mech_Centipede>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/FactionDef[defName="Mechanoid"]/pawnGroupMakers/li/options/Mech_Scyther</xpath>
