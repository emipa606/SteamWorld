    <xpath>Defs/FactionDef[defName="Insect"]/permanentEnemy</xpath>
    <value>
      <permanentEnemy>false</permanentEnemy>
    </value>
  </Operation>
  <!-- ========== Outlanders ========== -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/FactionDef[@Name="OutlanderFactionBase"]/canSiege</xpath>
    <value>
      <canSiege>false</canSiege>
    </value>
  </Operation>
  <!-- ========== Pirates ========== -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/FactionDef/canSiege</xpath>
    <value>
      <canSiege>false</canSiege>
    </value>
  </Operation>
  <!-- ========== Player ========== -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/FactionDef[defName="PlayerColony"]/techLevel</xpath>
    <value>
      <techLevel>Medieval</techLevel>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/FactionDef[defName="PlayerColony"]/apparelStuffFilter/thingDefs/li</xpath>
    <value>
      <li>Cloth</li>
    </value>
  </Operation>
  <!-- Catch all -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/FactionDef/techLevel</xpath>
    <value>
      <techLevel>Medieval</techLevel>
    </value>
  </Operation>
</Patch>